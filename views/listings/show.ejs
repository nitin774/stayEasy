<% layout('/layout/boilerplate') -%>
<body>
    <div class="row mt-3">
    <div class="col-8 offset-3 mb-2">
    <h3><b><%= listing.title %></b></h3>
    </div>
    <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url || listing.image %>" class="card-img-top show-image" alt="Listing">
        <div class="card-body">
            <p class="card-text">
                <p>Owned By <i><%= listing.owner.username %></i> </p>
                <p><%= listing.description %></p>
                <p>&#8377; <%= listing.price.toLocaleString('en-IN') %></p>
                <p><%= listing.location %></p>
                <p><%= listing.country %></p>
            </p>
        </div>
    </div>

    <% if(currentUser && listing.owner._id.equals(currentUser._id)) { %>
    <div class="btns mb-5">
        <a class="btn btn-dark col-sm-1 col-md-1 offset-3 add-button" href="/listings/<%= listing._id %>/edit">Edit</a>
        <form action="/listings/<%= listing._id %>?_method=DELETE" method="post"><button class="btn btn-dark offset-4">Delete</button></form>
    </div>
    <% } %> 
    <% if(currentUser){ %>
        <hr>
    <div class="col-8 offset-3 mb-3">
        <h4>Leave a Review</h4>
        <form novalidate class="needs-validation" action="/listings/<%= listing._id %>/reviews" method="post">
            <div class="md-3 mt-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                    <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                    <input type="radio" id="second-rate1" name="review[rating]" value="1" />
                    <label for="second-rate1" title="Terrible">1 star</label>
                    <input type="radio" id="second-rate2" name="review[rating]" value="2" />
                    <label for="second-rate2" title="Not good">2 stars</label>
                    <input type="radio" id="second-rate3" name="review[rating]" value="3" />
                    <label for="second-rate3" title="Average">3 stars</label>
                    <input type="radio" id="second-rate4" name="review[rating]" value="4" />
                    <label for="second-rate4" title="Very good">4 stars</label>
                    <input type="radio" id="second-rate5" name="review[rating]" value="5" />
                    <label for="second-rate5" title="Amazing">5 stars</label>
                </fieldset>
            </div>
            <div class="mt-3 mb-3">
                <label for="comment" class="form-label">Comments</label>
                <textarea required name="review[comment]" id="comment" cols="38" rows="4" class="form-control"></textarea>
                <div class="invalid-feedback">please add some comment here</div>
            </div>
            <button class="btn btn-outline-dark">Submit</button>
        </form>
    </div>
    <% } else { %>
        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4><a href="/login">Login</a> to add a review</h4>
        </div>
    <% } %>
    <hr>
    <% if(listing.reviews.length > 0) { %>
    <div class="row offset-1">
        <p><b>All reviews</b></p>
    <% for(let review of listing.reviews) { %>
        <div class="card col-5 ms-3 mb-3">
            <div class="card-body">
                <h5 class="card-title">@<%= review.author.username %></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
                <p class="card-text"><%= review.comment %></p>
            </div>
            <form class="mb-3 ms-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="post">
                <button class="btn btn-sm btn-dark">Delete</button>
            </form>
        </div>
    <% } %>
    </div>
    <% } %>
    </div>
    <hr>
    <div class="col-8 offset-2 mb-3">
    <h3>Where you'll be</h3>
    <div id="map"
            style="height: 400px; border-radius: 10px;"
            data-listing='<%- JSON.stringify(listing) %>'>
        </div>
    </div>
    <script src="/js/map.js"></script>
    <script src="/js/nav.js"></script>
</body>
</html>